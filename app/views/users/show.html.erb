<% if @user == current_user %>
  <h1 class="text-center mt-2 text-white">Welcome <%= @user.username %></h1>
	<% else %>
		<h1 class="text-center mt-2 text-white"><%= @user.username %></h1>
		<%= gravatar_for @user, size: 200 %>
<% end %>

<% if logged_in? && @user == current_user %>
	<div align="center"><%= link_to "Edit Profile", edit_user_path, class: "btn btn-info"%></div>
<% end %>
<% if @articles.empty? %>
<h5 class="text-center">Sorry! You Dont Have Articles</h5>
<% else  %>
<%= render 'articles/article' %>
<% end %>

<div class="flickr_pagination mb-2 mt-2">
        <%= will_paginate @articles, :container => false %>
</div>
