<h1 align="center" class="text-white">Articles Listing</h1>
	<div class="container">
		<% @articles.each do |article| %>
			<div class="row justify-content-md-center">
				<div class="col-8 mt-4">
					<div class="card text-center">
						<div class="card-header font-italic">
							By:Abhay
						</div>
						<div class="card-body">
							<h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
							<p class="card-text"><%= truncate(article.description) %></p>
							<%= link_to 'Edit',edit_article_path(article), class: "btn btn-outline-info" %>
							<%= link_to 'Show',article_path(article),class: "btn btn-outline-success" %>
							<%= link_to 'Delete', article_path(article),method: :delete, data: {confirm: "Are You Sure?"}, class: "btn btn-outline-danger" %>
						</div>
						<div class="card-footer text-muted">
							<small><b>Created <%= time_ago_in_words(article.created_at) %> ago, 
							edited <%= time_ago_in_words(article.updated_at) %> ago</b></small>
						</div>
					</div>
				</div>
			</diV>
	<% end %>
</div>




